üîπ STEP 9: Create VIEWS

üìÅ Views ‚Üí Student

üìÑ Views/Student/Index.cshtml
@model IEnumerable<StudentManagementSystem.Models.Student>

<h2>Student List</h2>
<a asp-action="Create">Add Student</a>

<table border="1">
    <tr>
        <th>ID</th><th>Name</th><th>Email</th>
        <th>Course</th><th>Age</th><th>Action</th>
    </tr>

@foreach (var s in Model)
{
    <tr>
        <td>@s.StudentId</td>
        <td>@s.Name</td>
        <td>@s.Email</td>
        <td>@s.Course</td>
        <td>@s.Age</td>
        <td>
            <a asp-action="Edit" asp-route-id="@s.StudentId">Edit</a> |
            <a asp-action="Delete" asp-route-id="@s.StudentId">Delete</a>
        </td>
    </tr>
}
</table>

üìÑ Views/Student/Create.cshtml


@model StudentManagementSystem.Models.Student

<h2>Add Student</h2>

<form asp-action="Create" method="post">
    Name: <input asp-for="Name" /><br />
    Email: <input asp-for="Email" /><br />
    Course: <input asp-for="Course" /><br />
    Age: <input asp-for="Age" /><br /><br />
    <button type="submit">Save</button>
</form>

üìÑ Views/Student/Edit.cshtml


@model StudentManagementSystem.Models.Student

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="StudentId" />
    Name: <input asp-for="Name" /><br />
    Email: <input asp-for="Email" /><br />
    Course: <input asp-for="Course" /><br />
    Age: <input asp-for="Age" /><br /><br />
    <button type="submit">Update</button>
</form>

üìÑ Views/Student/Delete.cshtml


@model StudentManagementSystem.Models.Student

<h2>Delete Student</h2>

<p>Are you sure you want to delete <b>@Model.Name</b>?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="studentId" value="@Model.StudentId" />
    <button type="submit">Delete</button>
</form>





























